{% extends "base.twig" %}

{% block content %}

  <div class="container">

    <div class="header">
      <h1>Games</h1>
    </div>
	
	<div class="games-grid">
		{% for game in games %}
			<a class="game" href="{{ game.permalink }}">
				<img src="{{ game.image }}">
				<h3>{{ game.title }}</h3>
			</a>
		{% endfor %}
	</div>
  </div>

{% endblock %}
